<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partial/style.ejs') %>
      <head>
        <meta charset="utf-8">
        <title></title>
      </head>
      <body>
        <%- include('./partial/header.ejs') %>
    <h1 align="center"><%= title%></h1>
    <table align="center">
      <tr>
        <th>id</th>
        <td><%= dataStudent.id%></td>
      </tr>
      <tr>
        <th>First Name</th>
        <td><%= dataStudent.first_name%></td>
      </tr>
      <tr>
        <th>Last Name</th>
        <td><%= dataStudent.last_name%></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= dataStudent.email%></td>
      </tr>
      <tr>
        <form method="post">
          <th>Choose Subject</th>
          <td>
            <select name="SubjectId">
              <% dataSubject.forEach(data =>{%>
                <option value="<%= data.id%>"> <%= data.name%> </option>
              <% }) %>
            </select>
          </td>
      </tr>
      <tr>
          <td></td>
          <td>
            <button type="submit" class="btn btn-default">Add</button>
            <a href="/students" align="center">
              <button type="button" name="button">cancel</button>
            </td>
        </form>
      </tr>
    </table>
  </body>
</html>
