<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include('./partial/style.ejs') %>
  <meta charset="utf-8">
  <title>Edit Teacher</title>
</head>

<body>
  <%- include('./partial/header.ejs') %>
  <h1 align="center">
    <%= title%>
  </h1>
  <table align="center">
    <tr>
      <th>id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>email</th>
      <th>subjectId</th>
    </tr>
    <tr>
      <td>
        <%= data.id%>
      </td>
      <td>
        <%= data.first_name%>
      </td>
      <td>
        <%= data.last_name%>
      </td>
      <td>
        <%= data.email%>
      </td>
      <% if (data.SubjectId == null) { %>
      <td> unassigned </td>
      <%} else { %>
      <td>
        <%= data.SubjectId %>
      </td>
      <% } %>
    </tr>

  </table>
  <table align="center">
    <form method="POST">
      <tr>
        <div class="form-group">
          <td><label for="firstName">First Name </label></td>
          <td>:</td>
          <td><input type="text" class="form-control" name="first_name" value="<%= data.first_name%>"></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <td><label for="lastName">Last Name </label></td>
          <td>:</td>
<td><input type="text" class="form-control" name="last_name" value="<%= data.last_name%>"></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <td><label for="email">Email</label></td>
          <td>:</td>
<td><input type="email" class="form-control" id="email" value="<%= data.email%>" name="email"></td>
        </div>
      </tr>
      <tr>
        <div class="form-group">
          <td><label for="SubjectId">SubjectId</label></td>
          <td>:</td>
<td><input type="SubjectId" class="form-control" value="<%= data.SubjectId %>" name="SubjectId"></td>
        </div>
      </tr>
      <tr>
      </tr>
      <tr>
        <td colspan="3">
          <button type="submit" class="btn btn-default">Edit</button>
          <a href="/teachers" align="center">
            <button type="button" name="button">cancel</button>
        </td>
    </form>
  </table>
</body>

</html>